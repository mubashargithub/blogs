<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            padding: 20px;
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        /* Header */
        .header {
            background: #2196F3;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .header h1 {
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        /* Navigation */
        .nav1 {
            background: #f8f9fa;
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .nav1 a {
            color: #666;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: all 0.3s;
        }

        .nav1 a:hover {
            background: #e9ecef;
            color: #333;
        }

        .nav1 a.active {
            background: #2196F3;
            color: white;
        }

        /* Form */
        .form-content {
            padding: 30px;
        }

        .alert {
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .alert-error {
            background: #ffeaea;
            color: #d63031;
            border-left: 4px solid #ff7675;
        }

        .alert-success {
            background: #e8f6ef;
            color: #27ae60;
            border-left: 4px solid #2ecc71;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: bold;
            font-size: 15px;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }

        .form-input:focus {
            outline: none;
            border-color: #2196F3;
        }

        .password-toggle {
            position: relative;
        }

        .password-toggle input {
            padding-right: 40px;
        }

        .toggle-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #666;
        }

        .help-text {
            color: #666;
            font-size: 13px;
            margin-top: 5px;
        }

        .form-footer {
            margin-top: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }

        .user-info {
            color: #666;
            font-size: 14px;
        }

        .user-info span {
            font-weight: bold;
            color: #333;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-size: 16px;
            cursor: pointer;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .cancel-btn {
            background: #6c757d;
        }

        .cancel-btn:hover {
            background: #5a6268;
        }

        .update-btn {
            background: #4CAF50;
        }

        .update-btn:hover {
            background: #45a049;
        }

        /* Profile Section */
        .profile-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 25px;
        }

        .profile-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .info-item {
            padding: 10px;
            background: white;
            border-radius: 5px;
            border-left: 4px solid #2196F3;
        }

        .info-label {
            font-size: 13px;
            color: #ef5e5e;
            margin-bottom: 5px;
        }

        .info-value {
            font-weight: bold;
            color: #333;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .form-content {
                padding: 20px;
            }
            
            .form-footer {
                flex-direction: column;
                align-items: stretch;
            }
            
            .btn {
                width: 100%;
                justify-content: center;
                margin-bottom: 10px;
            }
            
            .nav1 {
                justify-content: center;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .header {
                padding: 15px 10px;
            }
            
            .form-content {
                padding: 15px;
            }
            
            .form-input {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
        <%- include('partials/header', { 
            pageTitle: 'Login',
            pageStyles: '',
            pageScripts: ''
        }) %>
    <div class="container">
        <!-- Header -->

        <div class="header">
            <h1>üë§ Edit Profile</h1>
        </div>

        <!-- Navigation -->

        <!-- Form Content -->
        <div class="form-content">

            <!-- Current Profile Info -->
            <div class="profile-section">
                <h3 style="margin-bottom: 15px; color: #333;">Current Profile</h3>
                <div class="profile-info">
                    <!-- <div class="info-item">
                        <div class="info-label">User ID</div>
                        <div class="info-value"> < %= user.id %></div>
                    </div> -->
                    <div class="info-item">
                        <div class="info-label">Member Since</div>
                        <div class="info-value"><%= new Date(user.created_at).toLocaleDateString() %></div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email Verified</div>
                        <div class="info-value"><%= user.email_verified ? 'Yes' : 'No' %></div>
                    </div>
                </div>
            </div>

            <form action="/user/profile/update/<%= user.id %>" method="POST" id="profileForm">
                <!-- Name Field -->
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        class="form-input"
                        value="<%= user.name %>" 
                        required
                        placeholder="Enter your full name"
                    >
                </div>

                <!-- Email Field -->
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-input"
                        value="<%= user.email %>" 
                        required
                        placeholder="Enter your email"
                    >
                    <div class="help-text">Your login email address</div>
                </div>

                <!-- Password Fields (Optional) -->
                <div class="form-group">
                    <label>Change Password (Optional)</label>
                    
                    <div class="password-toggle" style="margin-bottom: 10px;">
                        <input 
                            type="password" 
                            id="current_password" 
                            name="current_password" 
                            class="form-input"
                            placeholder="Current password (required for password change)"
                        >
                        <span class="toggle-icon" onclick="togglePassword('current_password')">üëÅÔ∏è</span>
                    </div>
                    <div class="help-text">Enter current password to change password</div>

                    <div class="password-toggle" style="margin-bottom: 10px;">
                        <input 
                            type="password" 
                            id="new_password" 
                            name="new_password" 
                            class="form-input"
                            placeholder="New password"
                        >
                        <span class="toggle-icon" onclick="togglePassword('new_password')">üëÅÔ∏è</span>
                    </div>

                    <div class="password-toggle">
                        <input 
                            type="password" 
                            id="confirm_password" 
                            name="confirm_password" 
                            class="form-input"
                            placeholder="Confirm new password"
                        >
                        <span class="toggle-icon" onclick="togglePassword('confirm_password')">üëÅÔ∏è</span>
                    </div>
                    <div class="help-text">Leave blank if you don't want to change password</div>
                </div>

                <!-- Form Footer -->
                <div class="form-footer">
                    <div class="user-info">
                        Last updated: <span><%= user.updated_at ? new Date(user.updated_at).toLocaleDateString() : 'Never' %></span>
                    </div>
                    
                    <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                        <a href="/user/dashboard" class="btn cancel-btn">
                            ‚Üê Cancel
                        </a>
                        <button type="submit" class="btn update-btn">
                            üíæ Update Profile
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Toggle password visibility
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling;
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.textContent = 'üôà';
            } else {
                input.type = 'password';
                icon.textContent = 'üëÅÔ∏è';
            }
        }

        // Form validation
        document.getElementById('profileForm').addEventListener('submit', function(e) {
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const newPassword = document.getElementById('new_password').value;
            const confirmPassword = document.getElementById('confirm_password').value;
            const currentPassword = document.getElementById('current_password').value;
            
            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                alert('Please enter a valid email address');
                e.preventDefault();
                return;
            }
            
            // Name validation
            if (name.length < 2) {
                alert('Name must be at least 2 characters long');
                e.preventDefault();
                return;
            }
            
            // Password change validation
            if (newPassword || confirmPassword) {
                // If trying to change password, current password is required
                if (!currentPassword) {
                    alert('Current password is required to change password');
                    e.preventDefault();
                    return;
                }
                
                // Check if new password is at least 6 characters
                if (newPassword.length < 6) {
                    alert('New password must be at least 6 characters long');
                    e.preventDefault();
                    return;
                }
                
                // Check if passwords match
                if (newPassword !== confirmPassword) {
                    alert('New passwords do not match');
                    e.preventDefault();
                    return;
                }
            }
            
            // If new password provided but not current password
            if ((newPassword || confirmPassword) && !currentPassword) {
                alert('Please enter current password to change password');
                e.preventDefault();
                return;
            }

            if ((!newPassword) || (!confirmPassword)) {
                alert('Please enter New and Confirm password to change password');
                e.preventDefault();
                return;
            }
        });

        // Clear password fields on page load (optional)
        window.onload = function() {
            document.getElementById('new_password').value = '';
            document.getElementById('confirm_password').value = '';
            document.getElementById('current_password').value = '';
        };
    </script>
    <%- include('partials/footer') %>
</body>
</html>