<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        /* Login Page Specific Styles Only */
        .login-page {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 120px);
            background: linear-gradient(135deg, #667eea, #764ba2);
            padding: 20px;
        }

        .login-container {
            background: #fff;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            border-radius: 10px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .login-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
            font-size: 28px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .input-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-size: 15px;
            font-weight: 500;
        }

        .input-group input {
            width: 100%;
            padding: 12px 15px;
            border-radius: 6px;
            border: 1px solid #ddd;
            outline: none;
            transition: 0.3s;
            font-size: 16px;
        }

        .input-group input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        button[type="submit"] {
            width: 100%;
            padding: 14px;
            border: none;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            font-size: 16px;
            font-weight: 600;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 10px;
        }

        button[type="submit"]:hover {
            background: linear-gradient(135deg, #5a67d8, #6b46c1);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .signup-link {
            text-align: center;
            margin-top: 25px;
            font-size: 15px;
            color: #666;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .signup-link a {
            text-decoration: none;
            color: #667eea;
            font-weight: bold;
            padding: 6px 15px;
            border-radius: 4px;
            transition: 0.3s;
        }

        .signup-link a:hover {
            background: rgba(102, 126, 234, 0.1);
        }

        #error-msg {
            color: #dc3545;
            text-align: center;
            margin-bottom: 15px;
            padding: 10px;
            background: #ffeaea;
            border-radius: 6px;
            border-left: 4px solid #dc3545;
            font-size: 14px;
            display: none;
        }

        #error-msg.show {
            display: block;
        }

        /* Responsive Design for Login Page ONLY */
        @media (max-width: 768px) {
            .login-page {
                padding: 15px;
                min-height: calc(100vh - 80px);
            }
            
            .login-container {
                padding: 30px 25px;
                max-width: 350px;
            }
            
            .login-container h2 {
                font-size: 24px;
            }
        }

        @media (max-width: 480px) {
            .login-page {
                padding: 10px;
                min-height: calc(100vh - 70px);
            }
            
            .login-container {
                padding: 25px 20px;
                max-width: 100%;
            }
            
            .login-container h2 {
                font-size: 22px;
            }
            
            .input-group input {
                padding: 10px 12px;
                font-size: 15px;
            }
            
            .input-group label {
                font-size: 14px;
            }
            
            button[type="submit"] {
                padding: 12px;
                font-size: 15px;
            }
            
            .signup-link {
                flex-direction: column;
                gap: 5px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/header', { 
        pageTitle: 'Login',
        pageStyles: '',  /* No additional styles needed */
        pageScripts: ''
    }) %>

    <!-- Main content area -->
    <div class="login-page">
        <div class="login-container">
            <h2>Login</h2>

            <div id="error-msg"></div>

            <form id="loginForm" action="/user/login" method="POST">
                <div class="input-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" placeholder="Enter your email" required>
                </div>

                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" placeholder="Enter your password" required>
                </div>

                <button type="submit">Login</button>
            </form>

            <div class="signup-link">
                <span>Don't have an account?</span>
                <a href="/user/signup">Create Account</a>
            </div>
        </div>
    </div>


    <script>
        const form = document.getElementById("loginForm");
        const errorMsg = document.getElementById("error-msg");

        form.addEventListener("submit", function (e) {
            const email = document.getElementById("email").value.trim();
            const password = document.getElementById("password").value.trim();

            errorMsg.textContent = "";
            errorMsg.classList.remove("show");

            // Email validation
            if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                errorMsg.textContent = "Please enter a valid email address.";
                errorMsg.classList.add("show");
                e.preventDefault();
                return;
            }

            // Password validation
            if (password.length < 6) {
                errorMsg.textContent = "Password must be at least 6 characters.";
                errorMsg.classList.add("show");
                e.preventDefault();
                return;
            }
        });

        // Clear form on page load (optional)
        window.onload = function() {
            document.getElementById("email").value = '';
            document.getElementById("password").value = '';
        };
    </script>
    <%- include('partials/footer') %>
</body>
</html>