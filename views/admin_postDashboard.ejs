<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            padding: 20px;
        }

        /* Header */
        .header {
            background-color: white;
            padding: 15px 25px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .auth-buttons {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .login-btn {
            background-color: #4CAF50;
            color: white;
        }

        .signup-btn {
            background-color: #2196F3;
            color: white;
        }

        /* Main Content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .page-title {
            color: #333;
            margin-bottom: 25px;
            font-size: 28px;
        }

        /* Posts Grid */
        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
        }

        /* Post Card */
        .post-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            padding: 20px;
            transition: transform 0.2s;
        }

        .post-card:hover {
            transform: translateY(-5px);
        }

        .post-title {
            color: #333;
            font-size: 20px;
            margin-bottom: 10px;
            line-height: 1.4;
        }

        .post-content {
            color: #666;
            line-height: 1.6;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .post-meta {
            color: #888;
            font-size: 14px;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .view-btn {
            background-color: #ff9800;
            color: white;
            padding: 8px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            /* width: 50%; */
        }

        .view-btn:hover {
            background-color: #f57c00;
        }

        /* No Posts Message */
        .no-posts {
            text-align: center;
            color: #666;
            font-size: 18px;
            padding: 50px;
            background-color: white;
            border-radius: 8px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .posts-grid {
                grid-template-columns: 1fr;
            }
            
            .header {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }
            
            .auth-buttons {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="page-title">ðŸ“°Admin Posts Access</h1>
        <% let count = 1; %>
        <% if (posts && posts.length > 0) { %>
            <div class="posts-grid">
                <% posts.forEach(post => { %>
                    <div class="post-card">
                        <span style="color: #f40049; font-size: larger; font-weight: 700;"><%= count %></span>
                        <h3 class="post-title"><%= post.title %></h3>
                        <% count++; %>
                        <div class="post-content">
                            <%= post.content.length > 150 ? post.content.substring(0, 150) + '...' : post.content %>
                        </div>
                        
                        <div class="post-meta">
                            ðŸ“… Posted on: <%= new Date(post.created_at).toLocaleDateString('en-US', { 
                                year: 'numeric', 
                                month: 'long', 
                                day: 'numeric',
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        </div>
                        
                        <div style="display: flex; gap: 20px;">
                            <form action="/admin/user/post/edit/<%= user_id %>/<%= post.id %>" method="get">
                                <button style="background-color: #ffbe46; color: #000000;" type="submit" class="view-btn">Edit</button>
                            </form>
                            <form action="/admin/user/post/delete/<%= post.id %>" method="get">
                                <button style="background-color: #ff0101;" type="submit" class="view-btn">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-posts">
                <p>ðŸ“­ No posts available yet.</p>
                <p style="margin-top: 10px; font-size: 16px;">Be the first to create a post!</p>
            </div>
        <% } %>
    </div>
    <%- include('partials/footer') %>
</body>
</html>